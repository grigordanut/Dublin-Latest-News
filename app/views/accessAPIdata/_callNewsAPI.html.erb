<!-- View for top headline API request, response looped through and displayed as a cardview -->

<% @topHeadlines.each do |article|%>

  <div class="col-lg-4 col-md-6 col-sm-12">
    <div class="card" style="width: 23rem; height: 620px; padding: 20px;">
      <img class="card-img-top" style="width: 330px; height: 300px;"  src=<%= article.urlToImage %> >
      <div class="card-body">
        <h5 class="card-title"><%= article.title %></h5>
        <p class="card-text"> <%= article.description %> </p>

        <a href="<%= article.url %>" class="btn btn-primary"> Read More... </a>

      </div>
    </div>
  <br/>
  </div>
<% end %>
